import org.springframework.web.bind.annotation.RestController;

import com.logistica.domain.model.Cliente;

@RestController
public class ControllerCliente {
	
	public List<Cliente> lista() {
		var cliente1 = new Cliente();
		cliente1.setId(1L);
		cliente1.setNome("Tiago");
		cliente1.setEmail("tiagobsb@gmail.com");
		cliente1.setTelefone("61 99945686");
		
		var cliente2 = new Cliente();
		cliente2.setId(2L);
		cliente2.setNome("Angel");
		cliente2.setEmail("angel@gmail.com");
		cliente2.setTelefone("61 99945686");
		
		return Arrays.asList(cliente1, cliente2);
	}
}
